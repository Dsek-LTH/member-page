{
  "name": "news",
  "version": "1.0.0",
  "description": "API for data related to news.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/**/*.graphql dist",
    "dev": "concurrently npm:dev:*",
    "dev:start": "cd src && ts-node-dev --respawn --transpile-only --watch . index.ts",
    "dev:generate": "graphql-codegen --config codegen.yml --watch",
    "prestart": "npm run generate && npm run build",
    "start": "node dist/index.js",
    "test": "mocha --exit -r ts-node/register tests/**/*.spec.ts",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/federation": "^0.22.0",
    "apollo-server": "^2.21.2",
    "copyfiles": "^2.4.1",
    "dsek-shared": "file:../../shared",
    "graphql": "^15.5.0",
    "graphql-import": "^1.0.2",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/introspection": "^1.18.1",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "@types/chai": "^4.2.15",
    "@types/chai-spies": "^1.0.3",
    "@types/mocha": "^8.2.2",
    "@types/mock-knex": "^0.4.3",
    "apollo-server-testing": "^2.21.2",
    "chai": "^4.3.4",
    "chai-spies": "^1.0.0",
    "concurrently": "^6.0.0",
    "knex": "^0.21.19",
    "mocha": "^8.3.2",
    "mock-knex": "^0.4.9",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6"
  }
}
