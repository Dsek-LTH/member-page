FROM node:16-alpine

RUN apk add curl
HEALTHCHECK CMD curl -f http://localhost:4000/graphql?query=%7B__typename%7D || exit 1

WORKDIR /project/app

ENV NODE_ENV=production

COPY ./backend/services/core ./
RUN apk add --no-cache --virtual .gyp python3 make g++ && npm ci && apk del .gyp && npm run build
CMD npm migrate
CMD npm start