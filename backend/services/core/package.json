{
  "name": "core",
  "version": "1.0.1",
  "description": "API for data related to backend core.",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && copyfiles -u 1 src/**/*.graphql dist/src && copyfiles -u 1 src/ssl/** dist/src",
    "dev": "concurrently npm:dev:*",
    "dev:start": "cd src && ts-node-dev --respawn --transpile-only --watch . index.ts",
    "dev:generate": "graphql-codegen --config codegen.yml --watch",
    "dev:migrate": "NODE_ENV=development ts-node src/migrator/migrator.ts -- migrate minio seed",
    "migrate-test": "NODE_ENV=test ts-node src/migrator/migrator.ts migrate",
    "start": "concurrently npm:prod:*",
    "prod:start": "node dist/src/index.js",
    "prod:migrate": "NODE_ENV=production ts-node src/migrator/migrator.ts -- migrate minio",
    "test": "NODE_ENV=test nyc mocha --exit -r ts-node/register -r tsconfig-paths/register tests/**/*.spec.ts",
    "test-core": "NODE_ENV=test mocha --exit -r ts-node/register -r tsconfig-paths/register tests/core/**/*.spec.ts",
    "test-booking": "NODE_ENV=test mocha --exit -r ts-node/register -r tsconfig-paths/register tests/booking/**/*.spec.ts",
    "test-file-handler": "NODE_ENV=test mocha --exit -r ts-node/register -r tsconfig-paths/register tests/file-handler/**/*.spec.ts",
    "test-news": "NODE_ENV=test mocha --exit -r ts-node/register -r tsconfig-paths/register tests/news/**/*.spec.ts",
    "test-calendar": "NODE_ENV=test mocha --exit -r ts-node/register -r tsconfig-paths/register tests/calendar/**/*.spec.ts",
    "test-migrations": "NODE_ENV=test mocha --exit -r ts-node/register -r tsconfig-paths/register src/migrator/tests/migrations.spec.ts",
    "generate": "graphql-codegen --config codegen.yml",
    "migrate:make": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/federation": "^0.38.1",
    "@graphql-codegen/cli": "^2.13.12",
    "@graphql-codegen/introspection": "^2.1.0",
    "@graphql-codegen/typescript": "^2.8.2",
    "@graphql-codegen/typescript-resolvers": "^2.7.7",
    "@keycloak/keycloak-admin-client": "^16.1.1",
    "@types/chai": "^4.3.4",
    "@types/chai-spies": "^1.0.3",
    "@types/lodash": "^4.14.189",
    "@types/minio": "^7.0.14",
    "@types/mocha": "^10.0.0",
    "@types/mock-knex": "^0.4.3",
    "@types/node-cron": "^3.0.6",
    "apollo-datasource": "^3.3.2",
    "apollo-server": "^2.25.3",
    "apollo-server-caching": "^3.3.0",
    "apollo-server-errors": "^3.2.0",
    "apollo-server-testing": "^2.19.0",
    "axios": "^1.1.3",
    "chai": "^4.3.7",
    "chai-spies": "^1.0.0",
    "chonky": "^2.3.2",
    "concurrently": "^7.5.0",
    "copyfiles": "^2.4.0",
    "expo-server-sdk": "^3.6.0",
    "exponential-backoff": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.3.0",
    "lodash": "^4.17.21",
    "meilisearch": "^0.29.1",
    "minio": "^7.0.18",
    "mocha": "^10.1.0",
    "node-cron": "^3.0.0",
    "nyc": "^15.1.0",
    "pg": "^8.6.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.3",
    "uuid": "^9.0.0",
    "winston": "^3.3.3",
    "@types/uuid": "^8.3.4"
  }
}
